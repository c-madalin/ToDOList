<Window x:Class="ToDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo.ViewModels"
        mc:Ignorable="d"
        Title="ToDo List" Height="650" Width="1000"
        >
    <Window.DataContext>
        <local:ToDoViewModel/>
    </Window.DataContext>

    <StackPanel Margin="10">
        <TextBox Text="{Binding NewItemTitle, UpdateSourceTrigger=PropertyChanged}" Width="200" />
        <Button Content="Adaugă" Command="{Binding AddCommand}" Margin="5" />

        <ListBox ItemsSource="{Binding ToDoItems}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsDone}" Margin="5"/>
                        <TextBlock Text="{Binding Title}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="Salvează" Command="{Binding SaveCommand}" Margin="5"/>
        <Button Content="Încarcă" Command="{Binding LoadCommand}" Margin="5"/>
    </StackPanel>
</Window>
